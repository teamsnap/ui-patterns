{{!-- Nav item partial --}}
{{#*inline "nav-item"}}
  <a class="drizzle-Nav-item" href="{{@root.baseurl}}/{{url}}">
    {{label}}
  </a>
{{/inline}}

<div class="drizzle-Layout-nav drizzle-Nav" id="nav">
  <div class="drizzle-Nav-header">
    <a href="{{@root.baseurl}}/">
      {{> drizzle.logo}}
    </a>
    <a class="drizzle-Nav-header-toggle" href="#nav">
      <svg viewBox="-1 -1 12 7" width="16" height="16">
        <polyline fill="none" stroke="currentColor" stroke-width="2" points="0 0 5 5 10 0"/>
      </svg>
    </a>
  </div>
  <div class="drizzle-Nav-main" id="nav-menu">
    {{!-- Top-level pages --}}
    <h3 class="drizzle-Nav-item drizzle-u-marginTop">Intro</h3>
    <ul class="drizzle-Nav-menu">
      {{#each (pages sortby="order")}}
        <li>
          {{> nav-item label=data.title}}
        </li>
      {{/each}}
    </ul>
    {{!-- Element Patterns --}}
    <h3 class="drizzle-Nav-item drizzle-u-marginTop">Elements</h3>
    <ul class="drizzle-Nav-menu">
      {{#each (collections "elements" sortby="order")}}
        <li>
          {{> nav-item label=name}}
        </li>
      {{/each}}
    </ul>
    {{!-- Component Patterns --}}
    <h3 class="drizzle-Nav-item drizzle-u-marginTop">Components</h3>
    <ul class="drizzle-Nav-menu">
      {{#each (collections "components" sortby="order")}}
        <li>
          {{> nav-item label=name}}
        </li>
      {{/each}}
    </ul>
    {{!-- Utility Patterns --}}
    <!-- <h3 class="drizzle-Nav-item drizzle-u-marginTop">Utilities</h3>
    <ul class="drizzle-Nav-menu">
      {{#each (collections "utilities" sortby="order")}}
        <li>
          {{> nav-item label=name}}
        </li>
      {{/each}}
    </ul> -->
    {{!-- Other pages --}}
    <h3 class="drizzle-Nav-item drizzle-u-marginTop">Content</h3>
    <ul class="drizzle-Nav-menu">
      <li>
        {{#with (page "docs/index")}}
          {{> nav-item label=data.title}}
        {{/with}}
      </li>
      <li>
        {{#with (page "demos/index")}}
          {{> nav-item label=data.title}}
        {{/with}}
      </li>
    </ul>
  </div>
</div>
