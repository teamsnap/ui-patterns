<div class="u-padSidesMd u-xs-padSidesLg u-padBottomMd u-xs-size3of4 u-flexExpandSides">
  <div class="team-store-slide">
    {{> team-store-partials.apparel_white-2}}
    <p class="u-textRight" style="color: #7A7A7A">Sample Layout</p>
  </div>
</div>
<div class="FieldGroup">
  <div class="u-flex u-flexAlignItemsCenter u-flexJustifyBetween">
    <label class="FieldGroup-label u-fontSizeLg" for="Input-1">Primary Text</label>
    <span>0/12</span>
  </div>
  <input class="Input Input--large" type="text" id="PrimaryText" maxlength="12" placeholder="e.g. Team Name" value="Wildcats">
</div>
<div class="FieldGroup">
  <div class="u-flex u-flexAlignItemsCenter u-flexJustifyBetween">
    <label class="FieldGroup-label u-fontSizeLg" for="Input-1">
      Secondary Text
      <span class="u-padLeftXs" style="font-weight: normal; color: #7A7A7A">(optional)</span>
    </label>
    <span>0/12</span>
  </div>
  <input class="Input Input--large" type="text" maxlength="12" id="SecondaryText" placeholder="e.g. 2018" value="2018">
</div>
