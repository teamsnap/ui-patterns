<div class="u-padSidesMd u-xs-padSidesLg u-padBottomMd u-xs-size3of4 u-flexExpandSides">
  <div class="team-store-slide">
    {{> team-store-partials.apparel_white-2}}
    <p class="u-textRight" style="color: #7A7A7A">Sample Layout</p>
  </div>
</div>
<div class="FieldGroup">
  <div class="u-flex u-flexAlignItemsCenter u-flexJustifyBetween">
    <label class="FieldGroup-label u-fontSizeLg u-flex u-flexAlignItemsCenter" for="Input-1">
      <span>Primary Color:</span>
      <span class="js-primaryColorSelected u-padLeftXs" style="font-weight: normal;">Black</span>
    </label>
    <a class="js-primaryColorToggle">Hide colors</a>
  </div>
  <div class="ColorBlocks ColorBlocks--primary">
    {{#each (data "team-store-colors")}}
      <a class="ColorBlocks-block ColorBlocks-block--primary {{#compare this.name "==" "White"}}u-border{{/compare}} {{#compare this.name "==" "Black"}}is-active{{/compare}}" data-color="{{this.name}}" style="background-color: {{this.value}};">
      </a>
    {{/each}}
  </div>
</div>
<div class="FieldGroup">
  <div class="u-flex u-flexAlignItemsCenter u-flexJustifyBetween">
    <label class="FieldGroup-label u-fontSizeLg u-flex u-flexAlignItemsCenter" for="Input-1">
      <span>Secondary Color:</span>
      <span class="js-secondaryColorSelected u-padLeftXs" style="font-weight: normal;">Charcoal</span>
    </label>
    <a class="js-secondaryColorToggle">Hide colors</a>
  </div>
  <div class="ColorBlocks ColorBlocks--secondary">
    {{#each (data "team-store-colors")}}
      <a class="ColorBlocks-block ColorBlocks-block--secondary {{#compare this.name "==" "White"}}u-border{{/compare}} {{#compare this.name "==" "Charcoal"}}is-active{{/compare}}" data-color="{{this.name}}" style="background-color: {{this.value}};">
      </a>
    {{/each}}
  </div>
</div>
