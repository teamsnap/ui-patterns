<div class="Grid Grid--withGutter u-spaceTopMd">

  {{#each (data "marketplace.all-integrations")}}

  <div class="Grid-cell u-xs-size1of2 u-sm-size1of3 u-padBottomMd">
    <div class="Card">
      <div class="Card-image">
        <img src="{{this.image}}" />
      </div>
      <div class="Card-footer Grid">
        <div class="Grid-cell u-sizeFill">
            <div class="Card-title">{{this.title}}</div>
            <small class="Card-description">{{this.description}}</small>
        </div>
        <div class="Grid-cell u-sizeFit">
            <div class="Button Button--primary">Get Snapp</div>
        </div>
      </div>
    </div>
  </div>

  {{/each}}


</div>



<style>
  .Card {
    background: #fff;
    border: 1px solid #d6d6d6;
    border-radius: 8px;
  }

  .Card-image {
    text-align: center;
    margin: 0 auto;
    padding: 16px;
  }

  .Card-image img {
    max-width: 100%;
    height: 180px;
    width: auto;
  }

  .Card-title {
    font-family: Open Sans, Helvetica, sans-serif;
    color: #1a6baf;
    font-size: 16px;
    font-weight: 700;
  }

  .Card-description {
    display: block;
  }

  .Card-footer {
    background-color: #fcfcfc;
    border-top: 1px solid #d6d6d6;
    border-bottom-left-radius: 8px;
    border-bottom-right-radius: 8px;
    padding: 16px;
  }
</style>
