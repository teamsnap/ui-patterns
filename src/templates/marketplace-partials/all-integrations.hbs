<div class="Grid Grid--withGutter">

    {{#each (data "marketplace.all-integrations")}}

        <div class="Grid-cell u-xs-size1of2 u-sm-size1of3 u-padBottomMd">
            <div class="Card">
            <div class="Card-image">
                <img src="{{this.image}}"/>
            </div>
            <div class="Card-title">
                {{this.title}}
            </div>
            <small class="Card-description">{{this.description}}</small>
            <div class="Card-footer">
                <div class="Button Button--primary" data-control="modal" data-open="modal-snapp-details">Get Snapp</div>
            </div>
            </div>
        </div>

    {{/each}}


</div>



<style>

  .Card {
    background: #fff;
    border: 1px solid #d6d6d6;
    border-radius: 8px;
  }

  .Card-image {
    max-width: 90%;
    text-align: center;
    margin: 0 auto;
    padding: 16px;
  }

  .Card-image img {
    max-width: 100%;
    height: 200px;
    width: auto;
  }

  .Card-title {
    font-family: Open Sans, Helvetica, sans-serif;
    color: #1a6baf;
    font-size: 16px;
    font-weight: 700;
    padding: 0 16px;
    text-align: center;
  }

  .Card-description {
      text-align: center;
      padding: 0 16px;
      display: block;
  }

  .Card-footer {
    background-color: #fcfcfc;
    border-top: 1px solid #d6d6d6;
    border-bottom-left-radius: 8px;
    border-bottom-right-radius: 8px;
    padding: 16px;
    margin-top: 16px;
    text-align: right;
  }

</style>
