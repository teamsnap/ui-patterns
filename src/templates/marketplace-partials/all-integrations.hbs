<div class="Grid Grid--withGutter u-spaceTopMd">

  {{#each (data "marketplace.all-integrations")}}

    <div class="Grid-cell u-xs-size1of2 u-sm-size1of3 u-padBottomMd">
      <div class="Card">

        <div class="Card-image">
          <img src="{{this.image}}"/>
        </div>
        <div class="Card-footer Grid">
          <div class="Grid-cell u-sizeFill">
            <div class="Card-title">{{this.title}}</div>
            <small class="Card-description">{{this.description}}</small>
          </div>
          <div class="Grid-cell u-sizeFit">
            <div class="Button Button--primary show-snap-details-btn"
                data-control="modal" data-open="modal-snapp-details"
                data-title="{{this.title}}" data-logo="{{this.image}}"
                data-description="{{this.description}}"
            >Get Snapp</div>
          </div>
        </div>

        {{#if suggested}}
          <span class="Card-suggested">
            <svg viewBox="0 0 960 960" class="Icon"><path d="M957 364.6c5.3 14 4.3 27.3-3 40-32.7 60-102.3 135.3-209 226 28 115.3 44.7 207.7 50 277 1.3 18.7-6 33.3-22 44-8.7 5.3-17.3 8-26 8-6.7 0-14-1.7-22-5-11.3-6.7-29.7-16-55-28-90-44.7-153.3-78.7-190-102-36.7 23.3-100 57.3-190 102-25.3 12-43.7 21.3-55 28-16.7 8.7-32.7 7.7-48-3-16-10.7-23.3-25.3-22-44 5.3-69.3 22-161.7 50-277-106.7-90.7-176.3-166-209-226-7.3-12.7-8.3-26-3-40 4.7-14 13.3-23.3 26-28 37.3-16.7 131.7-27.7 283-33 54.7-158.7 99.3-255.3 134-290 10.7-9.3 22-14 34-14 12.7 0 23.7 4.7 33 14 35.3 34.7 80.3 131.3 135 290 151.3 5.3 245.7 16.3 283 33 12.7 5.3 21.3 14.7 26 28z"></path></svg>
          </span>
        {{/if}}

       </div>
    </div>

  {{/each}}

</div>
{{> marketplace-partials.snapp-details-modal }}



<style>
  .Card {
    background: #fff;
    border: 1px solid #d6d6d6;
    border-radius: 8px;
    position: relative;
  }

  .Card-suggested {
    background: #7fc243;
    color: #fff;
    position: absolute;
    top: 0;
    left: 0;
    display: block;
    padding: 8px;
    border-top-left-radius: 8px;
    border-bottom-right-radius: 8px;
  }

  .Card-image {
    text-align: center;
    margin: 0 auto;
    padding: 16px;
  }

  .Card-image img {
    max-width: 100%;
    height: 180px;
    width: auto;
  }

  .Card-title {
    font-family: Open Sans, Helvetica, sans-serif;
    color: #1a6baf;
    font-size: 16px;
    font-weight: 700;
  }

  .Card-description {
    display: block;
  }

  .Card-footer {
    background-color: #fcfcfc;
    border-top: 1px solid #d6d6d6;
    border-bottom-left-radius: 8px;
    border-bottom-right-radius: 8px;
    padding: 16px;
  }
</style>
