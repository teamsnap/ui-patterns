<div class="Grid Grid--withGutter u-spaceTopMd">

  {{#each (data "marketplace.my-integrations")}}
  <div class="Grid-cell u-xs-size1of2 u-sm-size1of3 u-padBottomMd">
    <div class="media">
      <div class="media-left">
        <img class="media-object" src="{{this.image}}" alt="...">
      </div>
      <div class="media-body">
        <button class="Button media-edit">
          {{svg "edit" class="Icon" role="presentation"}}
        </button>
        <h4 class="media-heading u-spaceTopSm">{{this.title}}</h4>
        <small>{{this.description}}</small>
      </div>
    </div>
  </div>
  {{/each}}
</div>



<style>
  .Mini-Card {
    background: #fff;
    border: 1px solid #d6d6d6;
    border-radius: 8px;
    max-height: 70px;
  }

  .Mini-Card-image {
    max-width: 100%;
    height: 64px;
    width: 64px;
    text-align: center;
    display: inline-block;
  }

  .Mini-Card-image img {
    height: 100%;
    width: 100%;
  }

  .Mini-Card-title {
    font-family: Open-sans;
    color: #1a6baf;
    font-size: 16px;
    padding: 16px 0;
    text-align: left;
  }

  .Mini-Card-footer {
    background-color: #fcfcfc;
    border-top: 1px solid #d6d6d6;
    padding: 16px;
  }

  .Mini-Card-description {
    text-align: center;
    padding: 0 16px;
    display: block;
  }

  .Mini-Card-footer {
    background-color: #fcfcfc;
    border-top: 1px solid #d6d6d6;
    padding: 16px;
    margin-top: 16px;
    text-align: right;
  }

  .media {
    margin-top: 15px;
    background: #fff;
    border: 1px solid #d6d6d6;
    border-radius: 8px;
  }

  .media:first-child {
    margin-top: 0;
  }

  .media,
  .media-body {
    overflow: hidden;
    zoom: 1;
  }

  .media-body {
    width: 10000px;
    padding-right: 5px;
  }

  .media-object {
    display: block;
    height: 64px;
    width: 64px;
    max-width: unset;
  }

  .media-object.img-thumbnail {
    max-width: none;
  }

  .media-right,
  .media>.pull-right {
    padding-left: 10px;
  }

  .media-left,
  .media>.pull-left {
    padding-right: 10px;
  }

  .media-left,
  .media-right,
  .media-body {
    display: table-cell;
    vertical-align: top;
  }

  .media-middle {
    vertical-align: middle;
  }

  .media-bottom {
    vertical-align: bottom;
  }

  .media-heading {
    margin-top: 0;
    font-family: Open Sans, Helvetica, sans-serif;
    color: #1a6baf;
    font-weight: 700;
    font-size: 16px;
  }

  .media-edit {
    float: right;
    margin-top: 8px;
    color: #7a7a7a;
  }
</style>