{{#embed  "patterns.components.step-nav.base" stepNavClass="StepNav--small"}}
  {{#content "steps"}}
    {{{embed "patterns.components.step-nav.step"
      stepEnabled=true
      stepTitle="Completed Step"
    }}}
    {{{embed "patterns.components.step-nav.step"
      stepEnabled=true
      stepActive=true
      stepIcon="ss-location"
      stepTitle="Current Step"
    }}}
    {{#iterate 2}}
      {{{embed "patterns.components.step-nav.step"
        stepIcon="ss-lock"
        stepTitle="Next Step"
      }}}
    {{/iterate}}
  {{/content}}
{{/embed}}
