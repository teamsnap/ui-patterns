---
order: 4
---

{{#embed  "patterns.components.step-nav.base" stepNavClass="StepNav--xsmall"}}
  {{#content "steps"}}
    {{{embed "patterns.components.step-nav.step"
      stepEnabled=true
      stepTitle="Completed Step"
    }}}
    {{{embed "patterns.components.step-nav.step"
      stepEnabled=true
      stepActive=true
      stepIcon="location"
      stepTitle="Current Step"
    }}}
    {{#iterate 2}}
      {{{embed "patterns.components.step-nav.step"
        stepIcon="lock"
        stepTitle="Next Step"
      }}}
    {{/iterate}}
  {{/content}}
{{/embed}}

{{#embed  "patterns.components.step-nav.base-numbered" stepNavClass="StepNav--xsmall"}}
  {{#content "steps"}}
    {{{embed "patterns.components.step-nav.step-number"
      stepEnabled=true
      stepNumber="1"
      stepTitle="Completed Step"
    }}}
    {{{embed "patterns.components.step-nav.step-number"
      stepEnabled=true
      stepActive=true
      stepNumber="2"
      stepTitle="Current Step"
    }}}
    {{{embed "patterns.components.step-nav.step-number"
      stepNumber="3"
      stepTitle="Next Step"
    }}}
    {{{embed "patterns.components.step-nav.step-number"
      stepNumber="4"
      stepTitle="Next Step"
    }}}
  {{/content}}
{{/embed}}
